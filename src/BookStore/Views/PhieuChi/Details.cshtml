
@model PhieuChiViewModel
@{
    ViewData["Title"] = "Thêm Phiếu Thu";
}

@section menu{
    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">Phiếu Thu</h2>
        <div class="right menu">
            <div class="item">
                <div class="ui transparent icon input">
                    <input type="text" placeholder="Tìm kiếm..." class="search-input">
                    <a class="search-btn">
                        <i class="search icon"></i>
                    </a>
                </div>
            </div>
            <a class="ui item" asp-controller="DonHang" asp-action="Index" id="donhang">
                Đơn Hàng
            </a>
            <a class="ui item" asp-controller="PhieuThu" asp-action="Index" id="phieuthu">
                Phiếu Thu
            </a>
            <a class="ui active item" asp-controller="PhieuChi" asp-action="Index" id="phieuchi">
                Phiếu Chi
            </a>
            <a class="ui item" asp-controller="TraHang" asp-action="Index" id="phieuthu">
                Phiếu Trả Hàng
            </a>
        </div>
    </div>
    <div class="row">
        <div class="sixteen wide column">
            <div class="ui secondary menu four item">
                <a class="item"
                   asp-controller="PhieuChi"
                   asp-action="Index">
                    <i class="list layout icon"></i>
                    Danh sách phiếu chi
                </a>
                <a class="item"
                   asp-controller="PhieuChi"
                   asp-action="Create">
                    <i class="add square icon"></i>
                    Thêm mới phiếu chi
                </a>
            </div>
        </div>
    </div>
}

<div class="ui centered grid equal width" style="width:100%;">
    <div class="sixteen wide column">
        <h3 class="ui dividing teal header"></h3>
    </div>
    <div class="row">
        <div class="column">
            <h3 class="ui dividing header">
                Mã phiếu
                <div class="sub header">@Model.ID</div>
            </h3>
        </div>
        <div class="column">
            <h3 class="ui dividing header">
                Đối tượng
                <div class="sub header">@Model.DoiTuong</div>
                <input type="hidden"
                       id="doituong"
                       value="@Model.DoiTuong">
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="column" id="tenkhachhang">
            <h3 class="ui dividing header">
                Tên khách hàng
                <div class="sub header">@Model.TenKhachHang</div>
            </h3>
        </div>
        <div class="column" id="tenncc">
            <h3 class="ui dividing header">
                Nhà cung cấp
                <div class="sub header">@Model.TenNhaCungCap</div>
            </h3>
        </div>
        <div class="column">
            <h3 class="ui dividing header">
                Loại phiếu
                <div class="sub header">@Model.TenLoaiPhieu</div>
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="column">
            <h3 class="ui dividing header">
                Ngày lập
                <div class="sub header">@Model.NgayLap</div>
            </h3>
        </div>
        <div class="column">
            <h3 class="ui dividing header">
                Tổng tiền
                <div class="sub header">@(((int)Model.TongTien).ToString("N0") + " ₫")</div>
            </h3>
        </div>
    </div>
</div>

