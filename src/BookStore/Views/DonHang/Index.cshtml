@model PaginatedList<DonHangViewModel>

@{
    ViewData["Title"] = "Đơn hàng";
    var list = ViewBag._listdonhang;
}

@section menu{
    <div class="ui secondary pointing fluid three item menu" style="margin:0">
        <a class="ui active item" asp-action="Index" id="donhang">
            Đơn Hàng
        </a>
        <a class="ui item" asp-action="Index" id="phieuthu">
            Phiếu Thu
        </a>
        <a class="ui item" asp-action="Index" id="phieuchi">
            Phiếu Chi
        </a>
    </div>
    <div class="ui secondary pointing fluid two item menu" style="margin-top:0">
        <a class="ui active item" asp-action="Index" id="donhang">
            Danh Sách Đơn Hàng
        </a>
        <a class="ui item" asp-action="Index" id="phieuthu">
            Thêm Mới Đơn Hàng
        </a>
    </div>
}

<div class="ui header" id="list-customer" style="margin:6px;">Danh Sách Đơn Hàng</div>

<div class="row" id="context">
    <div class="sixteen wide column" style="padding:0">
        <table class="ui teal table">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["NameSortParm"]"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            ID
                            <i class="caret @ViewData["SortDirection"] icon"></i>
                        </a>
                    </th>
                    <th>Tên Khách Hàng</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["DateSortParm"]"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Ngày Lập
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.ID
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.TenKhachHang
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.TenTrangThai
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.TongTien
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.NgayLap
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        @Html.Partial("_Paginated", Model)

    </div>
</div>

<script>
    $("#phieuthu").click(function () {
        document.getElementById("head").innerHTML = "Phiếu Thu";
    });
</script>