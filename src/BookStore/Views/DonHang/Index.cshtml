@model IEnumerable<BookStore.Models.DonHang>

@{
    ViewData["Title"] = "Don Hang";
    //var model = ViewBag.listdh;
}

<div class="ui pointing secondary fluid menu" style="padding:0">
    <div class="right menu">
        <a class="active item" data-tab="first">Đơn hàng</a>
        <a class="item" data-tab="second">Tạo đơn hàng</a>
        <a class="item" data-tab="third">Third</a>
    </div>
    
</div>
<div class="ui active tab segment" data-tab="first">
    <table class="ui celled table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Khách hàng</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th>Ngày lập</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donhang in Model)
            {
                <tr>
                    @*<td>@donhang.Id</td>*@
                    <td>@Html.DisplayFor(md => donhang.Id)</td>
                    <td>@Html.DisplayFor(md => donhang.KhachHang.TenKhachHang)</td>
                    @*<td>@Html.DisplayFor(md => donhang.TrangThai.TenTrangThai)</td>*@
                    <td>@Html.DisplayFor(md => donhang.TongTien)</td>
                    <td>@Html.DisplayFor(md => donhang.NgayLap)</td>
                    @*<td>@donhang.KhachHang.TenKhachHang</td>
                    <td>@donhang.TrangThai.TenTrangThai</td>
                    <td>@donhang.TongTien</td>
                    <td>@donhang.NgayLap</td>*@
                </tr>
            }
        </tbody>
    </table>

</div>
<div class="ui tab segment" data-tab="second">
</div>
<div class="ui tab segment" data-tab="third">
</div>

<script>
    $('.menu .item')
  .tab()
    ;
</script>