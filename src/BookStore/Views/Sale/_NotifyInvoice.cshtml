@model Notification

<div class="header"> @Model.Title </div>
<div class="content">    
    <div class="ui @Model.MessageType icon message">
        <i class="@Model.Icon icon"></i>
        <div class="content">
            <div class="header">
                @Model.Content
            </div>
        </div>
    </div>
</div>
<div class="actions">    
    <input type="hidden" value="@Model.ExtraData" name="BillID" />
    @{
        if (Model.ExtraAction != null)
        {
            <div class="ui @Model.MessageType labeled icon button" id="print-btn">
                <i class="print icon"></i>
                @Model.ExtraAction
            </div>
        }
    }
    <div class="ui blue cancel button">
        @Model.Button
    </div>
</div>

<script>
    var urlPrint= '@Url.Action("PrintBill", "Sale")';
</script>

<script src="~/js/Sale/PrintInvoice.js"></script>