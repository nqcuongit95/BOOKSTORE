@model RegisterUserViewModel

@{
    ViewBag.Title = "Register";
}

@Html.Partial("_AdminMenu","Create")

<div class="row">
    <div class="twelve wide column">
        <form class="ui large form" 
              method="post"
              asp-action="CreateUser"
              asp-antiforgery="true"
              id="register-form">

            <div class="ui centered very relaxed grid">
                <div class="row">
                    <div class="twelve wide column">
                        <h3 class="ui dividing center aligned header">Tạo Tài Khoản</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="six wide column">
                        <div class="field">
                            <label asp-for="@Model.FullName"></label>
                            <div class="ui left icon labeled input">
                                <input type="text" asp-for="@Model.FullName"
                                       placeholder="Họ tên"
                                       data-validate="valid-fullname">
                                <i class="student icon"></i>
                                <div class="ui corner label">
                                    <i class="asterisk icon"></i>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label asp-for="@Model.Username"></label>
                            <div class="ui left icon labeled input">
                                <input type="text" asp-for="@Model.Username"
                                       placeholder="Tài khoản"
                                       data-validate="valid-username">
                                <i class="user icon"></i>
                                <div class="ui corner label">
                                    <i class="asterisk icon"></i>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label asp-for="@Model.Password"></label>
                            <div class="ui left icon labeled input">
                                <input type="password"
                                       asp-for="@Model.Password"
                                       placeholder="Mật khẩu"
                                       data-validate="valid-password">
                                <i class="lock icon"></i>
                                <div class="ui corner label">
                                    <i class="asterisk icon"></i>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label asp-for="@Model.ConfirmPassword"></label>
                            <div class="ui left icon labeled input">
                                <input type="password"
                                       asp-for="@Model.ConfirmPassword"
                                       placeholder="Xác nhận mật khẩu"
                                       data-validate="valid-confirm-password">
                                <i class="lock icon"></i>
                                <div class="ui corner label">
                                    <i class="asterisk icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ui vertical divider">                        
                    </div>
                    <div class="six wide column">
                        <div class="grouped fields">
                            <label>Chọn quyền: </label>
                            @foreach (var role in Model.Roles)
                            {
                                <div class="inline field">
                                    <div class="ui radio checkbox">
                                        <input type="radio" 
                                               asp-for="@Model.AssignedRole"
                                               value="@role" 
                                               tabindex="0" 
                                               class="hidden">
                                        <label>@role</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="twelve wide column">
                        <div class="ui horizontal divider">
                            <button class="ui primary button">
                                <i class="add user icon"></i>
                                Đăng Ký                                
                            </button>                            
                        </div>
                        <div class="ui message" asp-validation-summary="ModelOnly"></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="ui tiny modal notify-modal">
</div>

<script>

    var redirectUrl = '@Url.Action("Index","Admin")';
    
</script>

<script src="~/js/Account.js"></script>