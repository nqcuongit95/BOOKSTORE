@model PaginatedList<PhieuThuViewModel>

@{
    ViewData["Title"] = "Phiếu Thu";
}

@section menu{
    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">Phiếu Thu</h2>
        <div class="right menu">
            <div class="item">
                <div class="ui transparent icon input">
                    <input type="text" placeholder="Tìm kiếm..." class="search-input">
                    <a class="search-btn">
                        <i class="search icon"></i>
                    </a>
                </div>
            </div>
            <a class="ui item" asp-controller="DonHang" asp-action="Index" id="donhang">
                Đơn Hàng
            </a>
            <a class="ui active item" asp-controller="PhieuThu" asp-action="Index" id="phieuthu">
                Phiếu Thu
            </a>
            <a class="ui item" asp-controller="PhieuChi" asp-action="Index" id="phieuchi">
                Phiếu Chi
            </a>
        </div>
    </div>
    <div class="row">
    <div class="sixteen wide column">
        <div class="ui secondary menu four item">
            <a class="active item"
               asp-controller="PhieuThu"
               asp-action="Index">
                <i class="list layout icon"></i>
                Danh sách phiếu thu
            </a>
            <a class="item"
               asp-controller="PhieuThu"
               asp-action="Create">
                <i class="add square icon"></i>
                Thêm mới phiếu thu
            </a>
        </div>
    </div>
</div>
}

<div class="row" id="context">
    <div class="sixteen wide column" style="padding:0">
        <table class="ui teal table">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["NameSortParm"]"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Mã phiếu
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["NameSortParm"]"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Đối tượng
                        </a>
                    </th>
                    <th>
                        Loại Phiếu
                    </th>
                    <th>Người tạo</th>
                    <th>Số tiền thu</th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["DateSortParm"]"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]">
                            Ngày Lập
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.ID
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.DoiTuong
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.TenLoaiPhieu
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.TenNhanVien
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.TongTien
                            </a>
                        </td>
                        <td class="selectable">
                            <a asp-action="Details" asp-route-id="@customer.ID">
                                @customer.NgayLap
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        @Html.Partial("_Paginated", Model)

    </div>
</div>
