@model PaginatedList<NhaCungCap>

@{
    ViewData["Title"] = "Nhà cung cấp";
}

@await Html.PartialAsync("~/Views/NhaCungCap/_HeaderMenuPartial.cshtml", "Index")

<div class="page-container">
    <div class="ui sixteen column grid">
        @await Html.PartialAsync("_HangHoaMenuPartial", "NhaCungCap")

        <div class="data-table twelve wide column">
            <table class="ui fixed table">
                <thead>
                    <tr>
                        <th>Tên nhà cung cấp</th>
                        <th>Ngày lập</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr asp-action="Edit"
                        asp-route-id="@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNhaCungCap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayLap)
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="ui basic icon button">
                                <i class="edit icon"></i>
                            </a>
                            <a asp-action="Details"
                               asp-route-id="@item.Id"
                               class="ui basic icon button">
                                <i class="file text outline icon"></i>
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="ui basic icon button">
                                <i class="trash icon"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

            @{var paginated = new Paginated(
                      Model.PageIndex,
                      Model.TotalPages,
                      "/HangHoa/NhaCungCap?page=");
            }
            @await Html.PartialAsync("_PaginatedPartial", paginated)
        </div>
    </div>
</div>
