@model LoaiHangHoa

@inject IStringLocalizer<SharedResource> sharedLocalizer

<form id="LoaiHangHoa"
      asp-action="DetailsConfirmed"
      asp-route-modal="@ViewData["Modal"]"
      asp-route-redirect="@ViewData["Redirect"]"
      class="crud-form update ui form">
    @if (ViewData["Modal"] != null && (bool)ViewData["Modal"] == true)
    {
        <h2 class="ui header">@ViewData["Action"]</h2>
    }

    <div class="field">
        <label asp-for="TenLoaiHangHoa"></label>
        <input asp-for="TenLoaiHangHoa"
               readonly=""
               placeholder="@Html.DisplayNameFor(model => model.TenLoaiHangHoa)">
    </div>

    <div class="action-buttons">
        @if ((bool)ViewData["Modal"] == true)
        {
            <a class="action-button cancel ui basic button">
                <i class="reply icon"></i>
                @sharedLocalizer["Cancel"]
            </a>
        }
        else
        {
            <a asp-action="Index"
               class="action-button cancel ui basic button">
                <i class="reply icon"></i>
                @sharedLocalizer["Cancel"]
            </a>
        }
    </div>
</form>
