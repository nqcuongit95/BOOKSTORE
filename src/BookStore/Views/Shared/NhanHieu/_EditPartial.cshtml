@model NhanHieu

@inject IStringLocalizer<SharedResource> sharedLocalizer

<form id="NhanHieu"
      asp-action="EditConfirmed"
      asp-route-modal="@ViewData["Modal"]"
      asp-route-redirect="@ViewData["Redirect"]"
      class="crud-form update ui form">
    @if (ViewData["Modal"] != null && (bool)ViewData["Modal"] == true)
    {
        <h2 class="ui header">@ViewData["Action"]</h2>
    }

    <input type="hidden" asp-for="Id" />

    <div class="required field">
        <label asp-for="TenNhanHieu"></label>
        <input asp-for="TenNhanHieu"
               type="text"
               placeholder="@Html.DisplayNameFor(model => model.TenNhanHieu)">
    </div>

    <div class="action-buttons">
        <button type="submit" class="action-button submit ui basic add button">
            <i class="checkmark icon"></i>
            @sharedLocalizer["Edit"]
        </button>
        @if ((bool)ViewData["Modal"] == true)
        {
            <a class="action-button cancel ui basic return button">
                <i class="reply icon"></i>
                @sharedLocalizer["Cancel"]
            </a>
        }
        else
        {
            <a asp-action="Index"
               class="action-button cancel ui basic return button">
                <i class="reply icon"></i>
                @sharedLocalizer["Cancel"]
            </a>
        }
    </div>
</form>
